            <c:if test="${not empty cart.cart}">
                <p>Your cart contains:</p>
                <c:forEach items="${sessionScope.cart.cart}" var="item">
                <!--<li>${item.getName()}</li>-->
                    <div class="row">
                        <div class="col-md-4 product-detail media">
